{
  "name": "@jsonjoy.com/collaborative-slate",
  "publishConfig": {
    "access": "public"
  },
  "version": "17.67.0",
  "description": "JSON CRDT integration with Slate.js for collaborative rich-text editing",
  "author": {
    "name": "streamich",
    "url": "https://github.com/streamich"
  },
  "homepage": "https://github.com/streamich/json-joy/tree/master/packages/collaborative-slate",
  "repository": {
    "type": "git",
    "url": "https://github.com/streamich/json-joy.git",
    "directory": "packages/collaborative-slate"
  },
  "license": "AGPL-3.0-only",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/streamich"
  },
  "keywords": [
    "json",
    "crdt",
    "slate",
    "slatejs",
    "plate",
    "platejs",
    "collaborative",
    "rich-text",
    "editor",
    "json-joy",
    "peritext",
    "sync",
    "real-time"
  ],
  "engines": {
    "node": ">=10.0"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "LICENSE",
    "lib/"
  ],
  "scripts": {
    "clean": "rimraf lib typedocs coverage gh-pages yarn-error.log",
    "build": "tsc --project tsconfig.build.json --module commonjs --target es2020 --outDir lib",
    "jest": "node -r ts-node/register ./node_modules/.bin/jest",
    "test": "jest --maxWorkers 7",
    "test:ci": "yarn jest --maxWorkers 3 --no-cache",
    "coverage": "yarn test --collectCoverage",
    "typedoc": "typedoc",
    "build:pages": "rimraf gh-pages && mkdir -p gh-pages && cp -r typedocs/* gh-pages && cp -r coverage gh-pages/coverage",
    "deploy:pages": "gh-pages -d gh-pages",
    "publish-coverage-and-typedocs": "yarn typedoc && yarn coverage && yarn build:pages && yarn deploy:pages",
    "typecheck": "tsc -p ."
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      ".*/node_modules/.*"
    ],
    "testRegex": ".*/(__tests__|__jest__|demo)/.*\\.(test|spec)\\.tsx?$",
    "rootDir": ".",
    "testPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "dependencies": {
    "@jsonjoy.com/collaborative-peritext": "workspace:*",
    "@jsonjoy.com/collaborative-presence": "workspace:*",
    "@jsonjoy.com/json-equal": "workspace:*",
    "@jsonjoy.com/ui": "workspace:*",
    "json-joy": "workspace:*",
    "nano-theme": "^1.5.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "slate": ">=0.100.0",
    "slate-react": ">=0.100.0",
    "tslib": "2"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "slate": {
      "optional": false
    },
    "slate-react": {
      "optional": false
    }
  },
  "devDependencies": {
    "@jsonjoy.com/collaborative-ui": "workspace:*",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "slate": "^0.123.0",
    "slate-dom": "^0.123.0",
    "slate-history": "^0.113.1",
    "slate-react": "^0.123.0"
  }
}
