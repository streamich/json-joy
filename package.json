{
  "name": "json-joy-monorepo",
  "description": "Collection of libraries for building collaborative editing apps.",
  "author": {
    "name": "streamich",
    "url": "https://github.com/streamich"
  },
  "homepage": "https://github.com/streamich/json-joy",
  "repository": "streamich/json-joy",
  "license": "Apache-2.0",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/streamich"
  },
  "engines": {
    "node": ">=10.0"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "bin": {
    "jj": "./bin/jj.js",
    "json-pack": "./bin/json-pack.js",
    "json-pack-test": "./bin/json-pack-test.js",
    "json-patch": "./bin/json-patch.js",
    "json-patch-test": "./bin/json-patch-test.js",
    "json-pointer": "./bin/json-pointer.js",
    "json-pointer-test": "./bin/json-pointer-test.js",
    "json-unpack": "./bin/json-unpack.js"
  },
  "files": [
    "LICENSE",
    "bin/",
    "lib/",
    "esm/"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -Apt run clean",
    "build": "yarn workspaces foreach -Apt run build",
    "test": "yarn workspaces foreach -Apt run test",
    "format": "biome format ./src ./packages/*/src",
    "format:fix": "biome format --write ./src ./packages/*/src",
    "lint": "biome lint ./src ./packages/*/src",
    "lint:fix": "biome lint --write ./src ./packages/*/src",
    "typecheck": "yarn workspaces foreach -Apt run typecheck",
    "coverage": "yarn test --collectCoverage",
    "upgrade:check": "npx npm-check-updates@16.14",
    "upgrade:interactive": "npx npm-check-updates@16.14 --interactive"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "peerDependencies": {
    "rxjs": "7",
    "tslib": "2"
  },
  "peerDependenciesMeta": {
    "rxjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-icons": "^1.3.1",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.8.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "benchmark": "^2.1.4",
    "clipboard-copy": "^4.0.1",
    "collaborative-editor": "^2.8.0",
    "collaborative-input": "^1.6.1",
    "collaborative-ui": "^1.6.0",
    "config-galore": "^1.0.0",
    "editing-traces": "https://github.com/streamich/editing-traces#145f79871a7bf54162f55d84eb6b8381db7b65b8",
    "fast-diff": "^1.3.0",
    "fast-json-patch": "^3.1.1",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "json-crdt-traces": "https://github.com/streamich/json-crdt-traces#ec825401dc05cbb74b9e0b3c4d6527399f54d54d",
    "json-logic-js": "^2.0.2",
    "monaco-editor": "^0.54.0",
    "nano-theme": "^1.4.3",
    "nice-ui": "^1.30.0",
    "quill-delta": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "use-t": "^1.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "yjs": "^13.6.18"
  },
  "jest": {
    "projects": [
      "packages/*/package.json"
    ]
  },
  "config": {
    "commitizen": {
      "changelog": {
        "maxMessageLength": 90,
        "scopes": [
          "",
          "demo",
          "json-cli",
          "json-crdt-diff",
          "json-crdt-patch",
          "json-crdt-extensions",
          "json-crdt-peritext-ui",
          "json-crdt",
          "json-hash",
          "json-ot",
          "json-patch-ot",
          "json-patch",
          "json-patch-diff",
          "json-stable",
          "json-text",
          "json-walk",
          "util"
        ]
      }
    }
  },
  "keywords": [
    "collaborative",
    "multiplayer",
    "local-first",
    "localfirst",
    "crdt",
    "rdt",
    "ot",
    "operational-transformation",
    "replicated",
    "sync",
    "synchronization",
    "distributed-state",
    "marshaling",
    "serializations",
    "json-patch",
    "json-binary",
