{
  "name": "json-joy-monorepo",
  "version": "17.63.0",
  "description": "Collection of libraries for building collaborative editing apps.",
  "author": {
    "name": "streamich",
    "url": "https://github.com/streamich"
  },
  "homepage": "https://github.com/streamich/json-joy",
  "repository": "streamich/json-joy",
  "license": "Apache-2.0",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/streamich"
  },
  "scripts": {
    "clean": "rimraf lib coverage typedocs gh-pages && yarn workspaces foreach -Apt run clean",
    "build": "yarn workspaces foreach -Apt run build",
    "test": "node -r ts-node/register ./node_modules/.bin/jest --maxWorkers 7",
    "test:coverage": "node -r ts-node/register ./node_modules/.bin/jest --maxWorkers 7 --collectCoverage",
    "format": "biome format ./packages/*/src",
    "format:fix": "biome format --write ./packages/*/src",
    "lint": "biome lint ./packages/*/src",
    "lint:fix": "biome lint --write ./packages/*/src",
    "typecheck": "yarn workspaces foreach -Apt run typecheck",
    "typedoc": "npx typedoc@0.28.5 --tsconfig tsconfig.typedoc.json",
    "build:pages": "rimraf gh-pages && mkdir -p gh-pages && cp -r typedocs/* gh-pages && cp -r coverage gh-pages/coverage",
    "deploy:pages": "gh-pages -d gh-pages",
    "publish-coverage-and-typedocs": "yarn typedoc && yarn test:coverage && yarn build:pages && yarn deploy:pages",
    "upgrade:check": "npx npm-check-updates@16.14",
    "upgrade:interactive": "npx npm-check-updates@16.14 --interactive"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "peerDependencies": {
    "rxjs": "7",
    "tslib": "2"
  },
  "peerDependenciesMeta": {
    "rxjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-icons": "^1.3.1",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "benchmark": "^2.1.4",
    "clipboard-copy": "^4.0.1",
    "collaborative-editor": "^2.8.0",
    "collaborative-input": "^1.6.1",
    "collaborative-ui": "^1.6.0",
    "config-galore": "^1.0.0",
    "editing-traces": "https://github.com/streamich/editing-traces#145f79871a7bf54162f55d84eb6b8381db7b65b8",
    "fast-diff": "^1.3.0",
    "fast-json-patch": "^3.1.1",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^30.2.0",
    "json-crdt-traces": "https://github.com/streamich/json-crdt-traces#ec825401dc05cbb74b9e0b3c4d6527399f54d54d",
    "json-logic-js": "^2.0.2",
    "monaco-editor": "^0.54.0",
    "nano-theme": "^1.4.3",
    "nice-ui": "^1.30.0",
    "quill-delta": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.1.2",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "use-t": "^1.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "yjs": "^13.6.18"
  },
  "jest": {
    "projects": [
      "packages/*/package.json"
    ]
  },
  "config": {
    "commitizen": {
      "changelog": {
        "maxMessageLength": 90,
        "scopes": [
          "",
          "demo",
          "json-cli",
          "json-crdt-diff",
          "json-crdt-patch",
          "json-crdt-extensions",
          "json-crdt-peritext-ui",
          "json-crdt",
          "json-hash",
          "json-ot",
          "json-patch-ot",
          "json-patch",
          "json-patch-diff",
          "json-path",
          "json-stable",
          "json-text",
          "json-walk",
          "util"
        ]
      }
    }
  },
  "keywords": [
    "collaborative",
    "multiplayer",
    "local-first",
    "localfirst",
    "crdt",
    "rdt",
    "ot",
    "operational-transformation",
    "replicated",
    "sync",
    "synchronization",
    "distributed-state",
    "marshaling",
    "serializations",
    "json-patch",
    "json-binary",
    "json-brand",
    "json-cli",
    "json-clone",
    "json-crdt-patch",
    "json-crdt-extensions",
    "json-crdt-peritext-ui",
    "json-crdt",
    "json-equal",
    "json-expression",
    "json-hash",
    "json-ot",
    "json-pack",
    "json-patch-multicore",
    "json-patch-ot",
    "json-patch",
    "json-pointer",
    "json-random",
    "json-schema",
    "json-size",
    "json-stable",
    "json-text",
    "json-type",
    "json-type-value",
    "json-walk"
  ],
  "packageManager": "yarn@4.12.0"
}
